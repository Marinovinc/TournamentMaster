  tournamentReminders   Boolean    @default(true)
  catchUpdates          Boolean    @default(true)
  rankingChanges        Boolean    @default(true)
  penaltyAlerts         Boolean    @default(true)
  messageNotifications  Boolean    @default(true)
  systemAlerts          Boolean    @default(true)

  // Canali preferiti
  emailEnabled          Boolean    @default(true)
  pushEnabled           Boolean    @default(true)

  // Timing
  reminderDaysBefore    Int        @default(1)   // Giorni prima per reminder
  digestEnabled         Boolean    @default(false) // Riassunto giornaliero invece di singole notifiche
  digestTime            String?    @db.VarChar(5)   // HH:MM per invio digest

  // Quiet hours
  quietHoursEnabled     Boolean    @default(false)
  quietHoursStart       String?    @db.VarChar(5)   // HH:MM
  quietHoursEnd         String?    @db.VarChar(5)   // HH:MM

  userId          String           @unique
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@map("notification_preferences")
}

// ================================
// FIPSAS HOMOLOGATION (Omologazione)
// ================================

enum HomologationStatus {
  NOT_REQUIRED         // Torneo non richiede omologazione FIPSAS
  PENDING              // In attesa di preparazione documenti
  READY_TO_SUBMIT      // Pronto per invio
  SUBMITTED            // Inviato al comitato settore
  UNDER_REVIEW         // In revisione dal comitato
  CORRECTIONS_NEEDED   // Richieste correzioni
  HOMOLOGATED          // Omologato ufficialmente
  REJECTED             // Rifiutato
}

model TournamentHomologation {
  id                  String             @id @default(uuid())

  // Stato corrente
  status              HomologationStatus @default(NOT_REQUIRED)

  // Informazioni FIPSAS
  fipsasEventCode     String?            @db.VarChar(50)    // Codice evento FIPSAS
  homologationNumber  String?            @db.VarChar(50)    // Numero omologazione assegnato

  // Date importanti
  submittedAt         DateTime?
  reviewedAt          DateTime?
  homologatedAt       DateTime?

  // Documenti (JSON array di URL)
  documents           String?            @db.Text

  // Note del revisore
  reviewerNotes       String?            @db.Text
  correctionRequests  String?            @db.Text

  // Checklist conformità (JSON object)
  complianceChecklist String?            @db.Text

  // Chi ha gestito
  submittedById       String?
  reviewedById        String?

  // Torneo di riferimento (1:1)
  tournamentId        String             @unique
  tournament          Tournament         @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@index([status])
  @@map("tournament_homologations")
}

// ================================
// SPONSORSHIP & PRIZES
// ================================

enum SponsorTier {
  PLATINUM      // Sponsor principale - visibilità massima
  GOLD          // Sponsor gold - logo grande
  SILVER        // Sponsor silver - logo medio
  BRONZE        // Sponsor bronze - logo piccolo
  SUPPORTER     // Sostenitore - solo menzione
}

model Sponsor {
  id              String        @id @default(uuid())

  // Info sponsor
  name            String        @db.VarChar(255)
  description     String?       @db.Text
  logo            String?       @db.VarChar(500)
  website         String?       @db.VarChar(255)
  contactEmail    String?       @db.VarChar(255)
  contactPhone    String?       @db.VarChar(50)

  // Livello sponsorship
  tier            SponsorTier   @default(BRONZE)

  // Visibilità
  isActive        Boolean       @default(true)
  displayOrder    Int           @default(0)

  // Associazione
  tenantId        String?
  tenant          Tenant?       @relation(fields: [tenantId], references: [id])

  // Relazioni
  tournaments     TournamentSponsor[]
  prizes          Prize[]

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([tenantId])
  @@index([tier])
  @@map("sponsors")
}

model TournamentSponsor {
  id              String        @id @default(uuid())

  // Personalizzazione per torneo
  tier            SponsorTier?  // Override del tier per questo torneo
  customMessage   String?       @db.Text
  displayOrder    Int           @default(0)

  // Relazioni
  tournamentId    String
  tournament      Tournament    @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  sponsorId       String
  sponsor         Sponsor       @relation(fields: [sponsorId], references: [id], onDelete: Cascade)

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([tournamentId, sponsorId])
  @@index([tournamentId])
  @@index([sponsorId])
  @@map("tournament_sponsors")
}

enum PrizeCategory {
  FIRST_PLACE     // Primo classificato
  SECOND_PLACE    // Secondo classificato
  THIRD_PLACE     // Terzo classificato
  BIGGEST_CATCH   // Pesce più grande
  MOST_CATCHES    // Più catture
  YOUNGEST        // Più giovane
  OLDEST          // Più anziano
  SPECIAL         // Premio speciale
  PARTICIPATION   // Premio partecipazione
}

model Prize {
  id              String        @id @default(uuid())

  // Info premio
  name            String        @db.VarChar(255)
  description     String?       @db.Text
  category        PrizeCategory @default(SPECIAL)
  position        Int?          // Per premi di classifica (1, 2, 3...)

  // Valore
  value           Decimal?      @db.Decimal(10, 2)
  valueDescription String?      @db.VarChar(255) // es. "1000€ + Canna da pesca"

  // Sponsor che offre il premio
  sponsorId       String?
  sponsor         Sponsor?      @relation(fields: [sponsorId], references: [id])

  // Torneo
  tournamentId    String
  tournament      Tournament    @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  // Vincitore (assegnato a fine torneo)
  winnerId        String?
  winner          User?         @relation(fields: [winnerId], references: [id])

  // Stato
  isAwarded       Boolean       @default(false)
  awardedAt       DateTime?

  // Media (foto/video del premio)
  media           PrizeMedia[]

  displayOrder    Int           @default(0)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([tournamentId])
  @@index([sponsorId])
  @@index([category])
  @@map("prizes")
}

model PrizeMedia {
  id              String        @id @default(uuid())

  // Info media
  type            String        @db.VarChar(20) // "image" | "video"
  url             String        @db.VarChar(500)
  thumbnailUrl    String?       @db.VarChar(500)
  filename        String?       @db.VarChar(255)
  mimeType        String?       @db.VarChar(100)
  size            Int?          // bytes

  // Metadati
  caption         String?       @db.VarChar(500)
  displayOrder    Int           @default(0)

  // Premio associato
  prizeId         String
  prize           Prize         @relation(fields: [prizeId], references: [id], onDelete: Cascade)

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([prizeId])
  @@map("prize_media")
}
