{
  "$schema": "https://capacitorjs.com/docs/cli/configuration",
  "appId": "app.tournamentmaster.www",
  "appName": "TournamentMaster",
  "webDir": "out",
  "plugins": {
    "Camera": {
      "quality": 90,
      "allowEditing": false,
      "resultType": "uri"
    },
    "Geolocation": {
      "enableHighAccuracy": true,
      "timeout": 10000,
      "maximumAge": 0
    },
    "CapacitorHttp": {
      "enabled": true
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0ea5e9",
      "showSpinner": true,
      "spinnerColor": "#ffffff"
    }
  },
  "android": {
    "allowMixedContent": true
  },
  "ios": {
    "contentInset": "automatic",
    "preferredContentMode": "mobile"
  }
}
