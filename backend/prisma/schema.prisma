// TournamentMaster Prisma Schema
// Database: MariaDB 10.4

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ================================
// TENANT (Multi-tenant Support)
// ================================

model Tenant {
  id          String   @id @default(uuid())
  name        String   @db.VarChar(255)
  slug        String   @unique @db.VarChar(100)
  domain      String?  @unique @db.VarChar(255)

  // Branding & Customization
  logo            String?  @db.VarChar(500)
  bannerImage     String?  @db.VarChar(500)
  primaryColor    String?  @db.VarChar(7) @default("#0066CC")
  secondaryColor  String?  @db.VarChar(7) @default("#004499")
  description     String?  @db.Text

  // Contact Info
  contactEmail    String?  @db.VarChar(255)
  contactPhone    String?  @db.VarChar(30)
  website         String?  @db.VarChar(255)
  address         String?  @db.VarChar(500)

  // Social Links
  socialFacebook  String?  @db.VarChar(255)
  socialInstagram String?  @db.VarChar(255)
  socialYoutube   String?  @db.VarChar(255)

  // FIPSAS Affiliation
  fipsasCode      String?  @db.VarChar(50)
  fipsasRegion    String?  @db.VarChar(100)

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users         User[]
  tournaments   Tournament[]
  bannerImages  BannerImage[]
  memberships   Membership[]
  sponsors           Sponsor[]
  tournamentProfiles TournamentProfile[]

  @@map("tenants")
}

// ================================
// USER & AUTHENTICATION
// ================================

// Ruoli PERMANENTI dell'utente (a livello di associazione)
enum UserRole {
  SUPER_ADMIN      // Amministratore piattaforma
  TENANT_ADMIN     // Amministratore associazione
  PRESIDENT        // Presidente associazione (stessi permessi di TENANT_ADMIN)
  VICE_PRESIDENT   // Vice Presidente
  SECRETARY        // Segretario
  TREASURER        // Tesoriere
  BOARD_MEMBER     // Membro del Consiglio Direttivo
  ORGANIZER        // Può organizzare tornei
  JUDGE            // Giudice (solo nei tornei, altrimenti Associato)
  CAPTAIN          // Capitano squadra
  PARTICIPANT      // Associato (default) - diventa Partecipante nei tornei
  MEMBER           // Alias per PARTICIPANT (legacy)
}

// Ruoli TEMPORANEI assegnati per singolo torneo
enum TournamentStaffRole {
  DIRECTOR         // Direttore di gara
  JUDGE            // Giudice di gara
  JUDGE_ASSISTANT  // Assistente del giudice di gara
  INSPECTOR        // Ispettore (può essere assegnato anche a livello di barca)
  SCORER           // Addetto punteggi
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique @db.VarChar(255)
  passwordHash  String    @db.VarChar(255)
  firstName     String    @db.VarChar(100)
  lastName      String    @db.VarChar(100)
  phone         String?   @db.VarChar(20)
  fipsasNumber  String?   @db.VarChar(50)
  role          UserRole  @default(MEMBER)
  avatar        String?   @db.VarChar(500)
  isActive      Boolean   @default(true)
  isVerified    Boolean   @default(false)
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Tenant relation (null for SUPER_ADMIN)
  tenantId      String?
  tenant        Tenant?   @relation(fields: [tenantId], references: [id])

  // Relations
  documents           Document[]
  registrations       TournamentRegistration[]
  catches             Catch[]
  organizedTournaments Tournament[] @relation("TournamentOrganizer")
  refreshTokens       RefreshToken[]
  captainedTeams      Team[] @relation("TeamCaptain")
  teamMemberships     TeamMember[]
  tournamentStaff     TournamentStaff[]
  uploadedImages      BannerImage[] @relation("UploadedImages")

  // NEW: Personal boats, equipment, skipper profile, memberships, media
  boats               Boat[]
  equipment           Equipment[]
  skipperProfile      SkipperProfile?
  memberships         Membership[]
  media               UserMedia[]

  // Messaging
  sentMessages        Message[] @relation("SentMessages")
  receivedMessages    Message[] @relation("ReceivedMessages")

  // Prizes won
  prizesWon           Prize[]

  // Catch reviews
  reviewedCatches     Catch[] @relation("CatchReviewer")

  @@index([email])
  @@index([tenantId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique @db.VarChar(500)
  expiresAt DateTime
  createdAt DateTime @default(now())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

// ================================
// DOCUMENTS
// ================================

enum DocumentType {
  MASAF_LICENSE
  MEDICAL_CERTIFICATE
  NAUTICAL_LICENSE
  IDENTITY_DOCUMENT
  TESSERA_ASSOCIATIVA   // Tessera associazione
  TESSERA_FIPSAS        // Tessera FIPSAS
  MIPAF                 // Licenza pesca MIPAF
  ASSICURAZIONE         // Polizza assicurativa
  OTHER
}

// ================================
// BOATS & EQUIPMENT ENUMS
// ================================

enum BoatType {
  FISHING_BOAT      // Peschereccio
  SAILING_YACHT     // Yacht a vela
  MOTOR_YACHT       // Yacht a motore
  RIB               // Gommone
  CENTER_CONSOLE    // Open
  CABIN_CRUISER     // Cabinato
  SPORT_FISHING     // Sportivo da pesca
  OTHER
}

enum EngineType {
  OUTBOARD          // Fuoribordo
  INBOARD           // Entrobordo
  STERN_DRIVE       // Entrofuoribordo
  SAIL              // Vela
  HYBRID
  NONE
}

enum EquipmentType {
  ROD               // Canna
  REEL              // Mulinello
  TACKLE_BOX        // Cassetta
  FISHING_LINE      // Lenza
  LURE              // Esca artificiale
  HOOK              // Amo
  NET               // Rete
  GAFF              // Raffio
  ELECTRONICS       // GPS, ecoscandaglio
  SAFETY_GEAR       // Sicurezza
  CLOTHING          // Abbigliamento
  OTHER
}

enum EquipmentCondition {
  NEW
  EXCELLENT
  GOOD
  FAIR
  NEEDS_REPAIR
}

enum BoatLicenseType {
  NONE
  ENTRO_12_MIGLIA   // Patente entro 12 miglia
  SENZA_LIMITI      // Patente senza limiti
  SHIP_MASTER       // Comandante
}

enum MembershipStatus {
  ACTIVE
  EXPIRED
  PENDING
  SUSPENDED
}

enum DocumentStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

model Document {
  id          String         @id @default(uuid())
  type        DocumentType
  status      DocumentStatus @default(PENDING)
  filePath    String         @db.VarChar(500)
  fileName    String         @db.VarChar(255)
  mimeType    String         @db.VarChar(100)
  fileSize    Int
  expiryDate  DateTime?
  reviewNotes String?        @db.Text
  reviewedAt  DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@index([status])
  @@map("documents")
}

// ================================
// TOURNAMENT
// ================================

enum TournamentStatus {
  DRAFT
  PUBLISHED
  REGISTRATION_OPEN
  REGISTRATION_CLOSED
  ONGOING
  COMPLETED
  CANCELLED
}

// Livello torneo (provinciale, regionale, nazionale, internazionale)
enum TournamentLevel {
  CLUB        // Solo club/società locale
  PROVINCIAL  // Provinciale
  REGIONAL    // Regionale
  NATIONAL    // Nazionale
  INTERNATIONAL // Internazionale
}

enum TournamentDiscipline {
  // ========== MARE (Pesca di Superficie) ==========
  SURF_CASTING            // Surf Casting
  BIG_GAME                // Big Game
  CANNA_NATANTE           // Pesca con Canna da Natante
  CANNA_RIVA              // Pesca con Canna da Riva
  BOLENTINO               // Bolentino
  DRIFTING                // Drifting (sottocategoria Big Game)
  TRAINA_COSTIERA         // Traina Costiera
  EGING                   // Eging (pesca ai cefalopodi)
  VERTICAL_JIGGING        // Vertical Jigging
  SHORE                   // Shore Jigging
  KAYAK_FISHING_MARE      // Kayak Fishing Mare

  // ========== ACQUE INTERNE ==========
  PESCA_COLPO             // Pesca al Colpo
  FEEDER                  // Feeder
  FLY_FISHING             // Pesca con la Mosca
  TROTA_TORRENTE          // Pesca alla trota con esche naturali in torrente
  TROTA_LAGO              // Pesca alla trota con esche naturali in lago
  SPINNING_FRESHWATER     // Pesca con esche artificiali da riva
  PREDATORI_BARCA         // Predatori con esche artificiali da barca
  BASS_FISHING            // Bass Fishing
  BELLY_BOAT              // Pesca da Belly Boat
  CARPFISHING             // Carp Fishing
  STREET_FISHING          // Street Fishing
  TROUT_AREA              // Trout Area
  PESCA_FIUME             // Pesca in Fiume
  BILANCELLA              // Pesca con Bilancella
  STORIONE                // Pesca allo Storione
  KAYAK_FISHING_INTERNO   // Kayak Fishing Acque Interne

  // ========== CASTING (Discipline Tecniche) ==========
  LONG_CASTING            // Long Casting
  FLY_CASTING             // Fly Casting
  CASTING                 // Casting

  // ========== DEPRECATI (manteniamo per backward compatibility) ==========
  MATCH_FISHING           // @deprecated - usa PESCA_COLPO
  PREDATORI               // @deprecated - usa PREDATORI_BARCA

  // ========== GENERALE ==========
  SOCIAL                  // Eventi sociali/ricreativi
  OTHER                   // Altre discipline
}

// Modalità di gioco del torneo
enum GameMode {
  TRADITIONAL     // Punteggio basato sul peso (sistema classico)
  CATCH_RELEASE   // Punteggio per specie + fascia taglia (C&R)
}

// Fascia taglia per modalità Catch & Release
enum SizeCategory {
  SMALL        // S - Taglia piccola
  MEDIUM       // M - Taglia media
  LARGE        // L - Taglia grande
  EXTRA_LARGE  // XL - Taglia extra large
}

// ================================
// TOURNAMENT PROFILE (Profili Standard/Custom)
// ================================
// Profili predefiniti FIPSAS o personalizzati dalle associazioni
// Pattern "Copy on Write": profili standard read-only, modifiche creano copia

model TournamentProfile {
  id              String              @id @default(uuid())

  // Identificazione
  name            String              @db.VarChar(255)
  description     String?             @db.Text

  // Origine
  isSystemProfile Boolean             @default(false)  // true = FIPSAS (read-only)
  basedOnId       String?                               // "Basato su" profilo (tracciabilità)
  basedOn         TournamentProfile?  @relation("ProfileFork", fields: [basedOnId], references: [id], onDelete: SetNull)
  derivedProfiles TournamentProfile[] @relation("ProfileFork")

  // Ownership (null = profilo sistema)
  tenantId        String?
  tenant          Tenant?             @relation(fields: [tenantId], references: [id])

  // Configurazione Torneo
  discipline      TournamentDiscipline
  level           TournamentLevel     @default(CLUB)
  gameMode        GameMode            @default(TRADITIONAL)

  // Regolamento FIPSAS
  followsFipsasRules  Boolean         @default(false)
  fipsasRegulationUrl String?         @db.VarChar(500)
  cipsRegulationUrl   String?         @db.VarChar(500)  // Link al regolamento CIPS internazionale

  // Regole default
  defaultMinWeight       Decimal?     @db.Decimal(8, 3)  // Peso minimo cattura kg
  defaultMaxCatchesPerDay Int?                            // Max catture/giorno
  defaultPointsPerKg     Decimal      @db.Decimal(6, 2)  @default(1)
  defaultBonusPoints     Int          @default(0)

  // Specie scoring per C&R (JSON per flessibilità)
  speciesScoringConfig   String?      @db.LongText

  // Specie ammesse (JSON array di speciesId)
  allowedSpeciesIds      String?      @db.Text

  // Stato
  isActive        Boolean             @default(true)
  displayOrder    Int                 @default(0)

  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  // Tornei che usano questo profilo
  tournaments     Tournament[]        @relation("TournamentProfile")

  @@index([tenantId])
  @@index([discipline])
  @@index([isSystemProfile])
  @@index([isActive])
  @@map("tournament_profiles")
}


model Tournament {
  id                  String               @id @default(uuid())
  name                String               @db.VarChar(255)
  description         String?              @db.Text
  discipline          TournamentDiscipline
  status              TournamentStatus     @default(DRAFT)
  level               TournamentLevel      @default(CLUB) // Livello torneo

  // Dates
  startDate           DateTime
  endDate             DateTime
  registrationOpens   DateTime
  registrationCloses  DateTime

  // Location
  location            String               @db.VarChar(255)
  locationLat         Decimal?             @db.Decimal(10, 8)
  locationLng         Decimal?             @db.Decimal(11, 8)

  // Registration
  registrationFee     Decimal              @db.Decimal(10, 2) @default(0)
  maxParticipants     Int?
  minParticipants     Int?                 @default(1)

  // Rules
  minWeight           Decimal?             @db.Decimal(8, 3) // Minimum catch weight in kg
  maxCatchesPerDay    Int?
  pointsPerKg         Decimal              @db.Decimal(6, 2) @default(1)
  bonusPoints         Int                  @default(0) // Bonus for biggest catch

  // Game Mode & Regulations
  gameMode            GameMode             @default(TRADITIONAL)
  followsFipsasRules  Boolean              @default(false)
  fipsasRegulationUrl String?              @db.VarChar(500) // Link al regolamento FIPSAS specifico
  cipsRegulationUrl   String?              @db.VarChar(500) // Link al regolamento CIPS internazionale

  // Media
  bannerImage         String?              @db.VarChar(500)

  // Profile (template)
  profileId           String?
  profile             TournamentProfile?   @relation("TournamentProfile", fields: [profileId], references: [id])

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt

  // Relations
  tenantId            String
  tenant              Tenant               @relation(fields: [tenantId], references: [id])

  organizerId         String
  organizer           User                 @relation("TournamentOrganizer", fields: [organizerId], references: [id])

  fishingZones        FishingZone[]
  registrations       TournamentRegistration[]
  catches             Catch[]
  leaderboardEntries  LeaderboardEntry[]
  allowedSpecies      TournamentSpecies[]
  speciesScoring      SpeciesScoring[]  // Punteggi C&R per specie/taglia
  teams               Team[]
  strikes             Strike[]
  staff               TournamentStaff[]
  mediaLibrary        BannerImage[]
  userMedia           UserMedia[]
  messages            Message[]
  penalties           Penalty[]
  homologation        TournamentHomologation?
  sponsors            TournamentSponsor[]
  prizes              Prize[]

  @@index([tenantId])
  @@index([status])
  @@index([discipline])
  @@index([startDate])
  @@map("tournaments")
}

// ================================
// FISHING ZONE (GeoJSON stored as TEXT)
// ================================

model FishingZone {
  id           String   @id @default(uuid())
  name         String   @db.VarChar(255)
  description  String?  @db.Text

  // GeoJSON stored as TEXT (Polygon or MultiPolygon)
  // Example: {"type":"Polygon","coordinates":[[[lng,lat],[lng,lat]...]]}
  geoJson      String   @db.LongText

  // Bounding box for quick filtering (optional optimization)
  minLat       Decimal? @db.Decimal(10, 8)
  maxLat       Decimal? @db.Decimal(10, 8)
  minLng       Decimal? @db.Decimal(11, 8)
  maxLng       Decimal? @db.Decimal(11, 8)

  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  tournamentId String
  tournament   Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  @@index([tournamentId])
  @@map("fishing_zones")
}

// ================================
// FISH SPECIES
// ================================

model Species {
  id            String   @id @default(uuid())
  scientificName String  @unique @db.VarChar(255)
  commonNameIt  String   @db.VarChar(255)
  commonNameEn  String   @db.VarChar(255)
  minSizeCm     Int?     // Minimum legal size
  pointsMultiplier Decimal @db.Decimal(4, 2) @default(1.0)
  isProtected   Boolean  @default(false)
  imageUrl      String?  @db.VarChar(500)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  catches       Catch[]
  tournaments   TournamentSpecies[]
  scoring       SpeciesScoring[]  // Punteggi C&R per torneo

  @@map("species")
}

model TournamentSpecies {
  id            String     @id @default(uuid())
  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)
  speciesId     String
  species       Species    @relation(fields: [speciesId], references: [id])

  // Override points for this tournament
  customPointsMultiplier Decimal? @db.Decimal(4, 2)

  @@unique([tournamentId, speciesId])
  @@map("tournament_species")
}

// ================================
// SPECIES SCORING (Catch & Release)
// ================================
// Punteggi per modalità Catch & Release
// Definisce i punti per ogni combinazione specie/taglia per torneo

model SpeciesScoring {
  id            String     @id @default(uuid())

  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  speciesId     String
  species       Species    @relation(fields: [speciesId], references: [id])

  // Punteggi per fascia taglia (basati su regolamento FIPSAS 2026)
  pointsSmall      Int      @default(100)   // S - Taglia piccola
  pointsMedium     Int      @default(200)   // M - Taglia media
  pointsLarge      Int      @default(400)   // L - Taglia grande
  pointsExtraLarge Int      @default(800)   // XL - Taglia extra large

  // Soglie lunghezza in cm (alla forca) per determinare categoria
  // Es: Alalunga <60=S, 60-80=M, 80-100=L, >100=XL
  thresholdSmallCm    Int?    // Lunghezza massima per S (sotto = S)
  thresholdMediumCm   Int?    // Lunghezza massima per M (sotto = M, sopra soglia S)
  thresholdLargeCm    Int?    // Lunghezza massima per L (sotto = L, sopra soglia M)
  // Sopra thresholdLargeCm = XL

  // Bonus C&R (moltiplicatore per rilascio corretto)
  catchReleaseBonus   Decimal  @db.Decimal(3, 2) @default(1.5) // Es: 1.5x

  // Solo cattura e rilascio (non può essere tenuto)
  catchReleaseOnly    Boolean  @default(false)

  // Note specifiche (es. "Video slamatura obbligatorio")
  notes         String?  @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([tournamentId, speciesId])
  @@index([tournamentId])
  @@index([speciesId])
  @@map("species_scoring")
}

// ================================
// TOURNAMENT REGISTRATION
// ================================

enum RegistrationStatus {
  PENDING_PAYMENT
  CONFIRMED
  CANCELLED
  REFUNDED
}

model TournamentRegistration {
  id             String             @id @default(uuid())
  status         RegistrationStatus @default(PENDING_PAYMENT)
  registeredAt   DateTime           @default(now())
  confirmedAt    DateTime?
  cancelledAt    DateTime?

  // Team info (optional)
  teamName       String?            @db.VarChar(255)
  boatName       String?            @db.VarChar(255)
  boatLength     Decimal?           @db.Decimal(5, 2)
  boatNumber     Int?               // Numero barca assegnato nel torneo

  // Ispettore di bordo (può essere di altra squadra/società)
  inspectorId    String?            @db.VarChar(36)
  inspectorName  String?            @db.VarChar(255)
  inspectorClub  String?            @db.VarChar(255) // Società di provenienza ispettore

  // Società di provenienza (per tornei provinciali/regionali/nazionali)
  clubName       String?            @db.VarChar(255)
  clubCode       String?            @db.VarChar(50) // Codice affiliazione FIPSAS

  // Payment
  amountPaid     Decimal?           @db.Decimal(10, 2)
  paymentId      String?            @db.VarChar(255) // Stripe payment ID

  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  userId         String
  user           User               @relation(fields: [userId], references: [id])

  tournamentId   String
  tournament     Tournament         @relation(fields: [tournamentId], references: [id])

  @@unique([userId, tournamentId])
  @@index([tournamentId])
  @@index([status])
  @@map("tournament_registrations")
}

// ================================
// TEAM (Equipaggio Barca)
// ================================

// Ruoli equipaggio per discipline come Drifting
enum CrewRole {
  SKIPPER       // Skipper/Conduttore barca (può essere esterno)
  TEAM_LEADER   // Capoequipaggio
  CREW          // Membro equipaggio
  ANGLER        // Pescatore
  GUEST         // Ospite (può essere esterno)
}

model Team {
  id            String   @id @default(uuid())
  name          String   @db.VarChar(255) // Nome squadra
  boatName      String   @db.VarChar(255) // Nome barca
  boatNumber    Int?     // Numero barca assegnato nel torneo

  // Capoequipaggio (responsabile iscrizione)
  captainId     String
  captain       User     @relation("TeamCaptain", fields: [captainId], references: [id])

  // Società di appartenenza del team
  clubName      String?  @db.VarChar(255)
  clubCode      String?  @db.VarChar(50) // Codice FIPSAS

  // Associazione RAPPRESENTATA nel torneo (per tornei provinciali/nazionali)
  // Può essere diversa dalla società di appartenenza
  representingClubName String?  @db.VarChar(255)
  representingClubCode String?  @db.VarChar(50)

  // Ispettore di bordo assegnato
  inspectorId   String?  @db.VarChar(36)
  inspectorName String?  @db.VarChar(255)
  inspectorClub String?  @db.VarChar(255) // Società ispettore

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  tournamentId  String
  tournament    Tournament @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  // Membri equipaggio
  members       TeamMember[]
  strikes       Strike[]
  penalties     Penalty[]

  @@unique([tournamentId, boatNumber])
  @@index([tournamentId])
  @@index([captainId])
  @@map("teams")
}

// ================================
// TEAM MEMBER (Membro Equipaggio)
// ================================
// Supporta sia membri registrati (userId) che esterni (nome/cognome)
// Per tornei interni: skipper e ospiti possono essere esterni
// Per tornei provinciali: tutti devono essere tesserati

model TeamMember {
  id        String   @id @default(uuid())

  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  // Utente registrato (opzionale per membri esterni)
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  // Dati per membri esterni (skipper/ospiti non iscritti)
  externalName      String?  @db.VarChar(255) // Nome completo se esterno
  externalPhone     String?  @db.VarChar(30)
  externalEmail     String?  @db.VarChar(255)
  isExternal        Boolean  @default(false)

  // Ruolo nell'equipaggio
  role      CrewRole @default(CREW)

  createdAt DateTime @default(now())

  // Vincolo: un utente registrato può essere in un team una sola volta
  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
  @@map("team_members")
}

// ================================
// TOURNAMENT STAFF (Ruoli temporanei per torneo)
// ================================

model TournamentStaff {
  id            String              @id @default(uuid())
  role          TournamentStaffRole
  notes         String?             @db.VarChar(500)

  // Utente assegnato
  userId        String
  user          User                @relation(fields: [userId], references: [id])

  // Torneo di riferimento
  tournamentId  String
  tournament    Tournament          @relation(fields: [tournamentId], references: [id], onDelete: Cascade)

  // Gerarchia: per JUDGE_ASSISTANT, riferimento al giudice principale
  parentStaffId String?
  parentStaff   TournamentStaff?    @relation("StaffHierarchy", fields: [parentStaffId], references: [id], onDelete: SetNull)
  assistants    TournamentStaff[]   @relation("StaffHierarchy")

  createdAt     DateTime            @default(now())

  @@unique([tournamentId, userId, role])  // Un utente può avere un solo ruolo specifico per torneo
  @@index([tournamentId])
  @@index([userId])
  @@index([parentStaffId])
  @@map("tournament_staff")
}

